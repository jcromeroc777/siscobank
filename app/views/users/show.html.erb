<div class="row">
    <div class="col-12">
        <h1>Lista de usuarios</h1>
        <div class="row mt-3">
            <div class="col-auto">
                <a class="btn btn-success" href="/users/new" role="button">Agregar Usuario</a>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="table-users" class="table table-hover table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Documento</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Fecha emisión</th>
                                <th scope="col">Fecha vencimiento</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Correo</th>
                                <th scope="col">Teléfono principal</th>
                                <th scope="col">Teléfono secundario</th>
                                <th scope="col">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @users.each do |user| %>
                                <tr>
                                    <th scope="row"><%= user.document %></td>
                                    <td><%= user.typedocument %></td>
                                    <td><%= user.issuedate %></td>
                                    <td><%= user.expirationdate %></td>
                                    <td><%= user.name %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.mainphone %></td>
                                    <td><%= user.secondaryphone %></td>
                                    <td>
                                        <a href="/users/edit/<%=user.id%>" data-toggle="tooltip" title="Editar Usuario"><i class="fa fa-edit fa-2x text-white"></i></a>
                                        <a onclick="alertDelete(<%=user.id%>)" data-toggle="tooltip" title="Eliminar Usuario"><i class="fas fa-trash-alt fa-2x text-white"></i></a>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function alertDelete(id) {
        Swal.fire({
          title: 'Seguro?',
          text: "Eliminaras al empleado con ID " + id,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#d33',
          cancelButtonColor: '#3085d6',
          cancelButtonText: 'Cancelar',
          confirmButtonText: 'Borrar'
        }).then((result) => {
          if (result.value) {
            $.ajax({
                type: "DELETE",
                url: "/users/" + id
            })
          }
        })
    };
</script>